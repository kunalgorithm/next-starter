{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve"
    },
    "include": [
        "src",
        "components",
        "admin",
        "api",
        "pages/SplashPage.jsx",
        "pages/ConnectorPage.jsx",
        "pages/CompanyPage.jsx",
        "lib/apollo-config.js",
        "lib/auth.jsx",
        "pages/AdminEditConnectors.jsx"
    ]
}
